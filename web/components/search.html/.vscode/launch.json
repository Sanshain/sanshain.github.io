    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "nollup development",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\node_modules\\nollup\\lib\\cli.js",
            "args": [
                "-c",
                "--environment",
                "NODE_ENV:development,NODE_OPTIONS:--no-experimental-fetch"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "rollup",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\node_modules\\rollup\\dist\\bin\\rollup",
            "args": [
                "-c"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nollup via npm",

            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",  
            "runtimeArgs": [
                "run-script",
                "dev:w",
                "--",
                "--inspect-brk=9229"
            ]
        },
    ]
}